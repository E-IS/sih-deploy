<?xml version="1.0" encoding="UTF-8"?>

<Context path="/adagio-admin">
	<Resource
			name="jdbc/adagio-admin-v2"
			auth="Container"
			type="javax.sql.DataSource"
			driverClassName="oracle.jdbc.OracleDriver"
			url="jdbc:oracle:thin:@10.9.8.153:1521:ORACLE"
			username="SIH2_ADAGIO_DBA"
			password="SIH2_ADAGIO_DBA"
			maxActive="5"
			maxIdle="2"
			maxWait="-1"
	/>

	<Environment
			name="adagio-admin.conf"
			type="java.lang.String"
			value="${catalina.base}/conf/adagio-admin.conf"
			override="false"
	/>

</Context>

